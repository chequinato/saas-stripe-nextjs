datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]

}

model User {
  id               Int            @id @default(autoincrement())
  name             String
  email            String         @unique
  password         String
  stripeCustomerId String?

  // 1:1 — apenas aponta, não define fields nem references
  subscription     Subscription?
}

model Subscription {
  id          Int    @id @default(autoincrement())
  stripeSubId String @unique
  status      String

  // 1:1 — ESTE é o lado que define a relação
  user   User  @relation(fields: [userId], references: [id])
  userId Int   @unique
}
